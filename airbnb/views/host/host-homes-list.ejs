<%- include('../partials/header') %>
  <%- include('../partials/navbar') %>
    <main class="bg-gray-50">
      <div class="container mx-auto">
        <h1>List of Homes: </h1>
        <% if(homes.length===0){ %>
          <p class="text-center text-gray-600 text-lg">No homes Added yet. </p>
          <% } else { %>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
              <%homes.forEach((home,index)=>{ %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col">
                  <img src="<%=home.imageUrl%>" alt="<%=home.houseName %>" class="h-48 w-full object-cover">
                  <div class="p-6 flex-1 flex flex-col">
                    <h2 class="text-xl font-bold mb-2 text-blue-700">
                      <%=home.houseName %>
                    </h2>
                    <p class="text-gray-700 mb-1"><span class="font-semibold">Owner:</span>
                      <%=home.ownerName%>
                    </p>
                    <p class="text-gray-700 mb-1"><span class="font-semibold">Location:</span>
                      <%=home.location%>
                    </p>
                    <p class="text-gray-700 mb-1"><span class="font-semibold">Price:</span>
                      <%=home.price%>
                    </p>
                    <p class="text-gray-700 mb-1"><span class="font-semibold">Description:</span>
                      <%=home.description%>
                    </p>
                  </div>
                </div>
                <%});%>
            </div>
            <% } %>
      </div>
    </main>
    <%- include('../partials/footer') %>