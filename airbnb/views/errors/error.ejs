<%- include('../partials/header') %>
  <%- include('../partials/navbar') %>

    <main class="flex flex-col items-center justify-center min-h-[70vh]">
      <div class="bg-white shadow-2xl rounded-2xl p-10 w-full max-w-lg mt-10 border-t-8 border-red-500">
        <div class="flex flex-col items-center mb-8">
          <!-- Large, bold error icon -->
          <svg class="w-20 h-20 text-red-500 mb-4" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
          <h1 class="text-3xl font-extrabold text-red-600 mb-2 tracking-wide">Oops! Something Went Wrong</h1>
          <p class="text-lg text-gray-700 bg-red-50 border border-red-200 rounded px-4 py-2 mt-2">
            <%= message %>
          </p>
        </div>
        <div class="mt-8 flex justify-center">
          <a href="/hosts/add-home"
            class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-8 rounded shadow transition text-lg">Back
            to Add Home</a>
        </div>
      </div>
    </main>

    <%- include('../partials/footer') %>